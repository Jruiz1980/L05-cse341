{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2017",
    "jsx": "react",
    "allowJs": true,
    "declaration": true
  },
  "include": ["*", "controllers/*", "db/*", "middleware/*", "routes/*"]
}
